{% extends 'base.html.twig' %}
{% block body %}
{{form_start(form, {'attr':{ 'novalidate': 'novalidate'}})}}
{{form_label(form.firstname, 'Votre prénom')}}
{{form_widget(form.firstname)}}
{{form_errors(form.firstname)}}
{{form_label(form.lastname, 'Votre nom de famille')}}
{{form_widget(form.lastname)}}
{{form_errors(form.lastname)}}
{{form_label(form.country, 'De quel pays venez-vous ?')}}
{{form_widget(form.country)}}
{{form_label(form.birthday, 'Votre date de naissance')}}
{{form_widget(form.birthday)}}
{{form_errors(form.birthday)}}
{{form_label(form.discount, 'Avez-vous un tarif réduit ?')}}
{{form_widget(form.discount)}}
{{form_errors(form.discount)}}
{{form_end(form)}}

{% endblock %}
